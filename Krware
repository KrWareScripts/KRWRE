
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window = Fluent:CreateWindow({
    Title = "KR Hub" .. Fluent.Version,
    SubTitle = "by KrWare",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Dark", -- Normal Fluent theme
    MinimizeKey = Enum.KeyCode.LeftControl
})

local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "star" }),
    Universal = Window:AddTab({ Title = "Universal", Icon = "star" }),
    StealABrainrot = Window:AddTab({ Title = "Steal A Brainrot", Icon = "star" }),
    Jailbreak = Window:AddTab({ Title = "Jailbreak", Icon = "key" }),
    NightsInTheForest = Window:AddTab({ Title = "99 Nights In the Forest", Icon = "moon" }),
    StrongestBattleGrounds = Window:AddTab({ Title = "The Strongest Battlegrounds", Icon = "sword" }),
    SouthBronx = Window:AddTab({ Title = "South Bronx", Icon = "star" }),
    MurderMystery2 = Window:AddTab({ Title = "Murder Mystery 2", Icon = "sword" }),
    TotalDramaIsland = Window:AddTab({ Title = "Total Drama Island", Icon = "star" }),
    Bedwars = Window:AddTab({ Title = "Bedwars", Icon = "shield" }),
    Arsenal = Window:AddTab({ Title = "Arsenal", Icon = "sword" }),
    Settings = Window:AddTab({ Title = "Settings", Icon = "settings" }) -- Always last
}

-- === MAIN ===
Tabs.Main:AddButton({
    Title = "Join the discord server!",
    Description = "Click to join the Discord server",
    Callback = function()
        local InviteLink = "https://discord.gg/SpjH5fB4"
        if setclipboard then pcall(setclipboard, InviteLink) end
        pcall(function()
            game:GetService("StarterGui"):SetCore("SendNotification", {
                Title = "Discord Link",
                Text = "Discord invite link copied to clipboard!",
                Duration = 5
            })
        end)
    end
})

-- === UNIVERSAL ===
Tabs.Universal:AddButton({
    Title = "YAHRM Universal",
    Description = "Universal Script",
    Callback = function()
        loadstring(game:HttpGet("https://rawscripts.net/raw/Universal-Script-YARHM-12403"))()
    end
})

